<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="16dp"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_food_image"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:scaleType="fitXY"
            android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_marginLeft="8dp"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="7">
        <TextView
            android:id="@+id/txt_order_numer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10/09/2020 12:05:46"
            android:textColor="@android:color/holo_blue_dark"
            android:fontFamily="@font/brandon_medium"
            android:textStyle="italic"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_time"
            android:text="Data comenzii: data"
            android:fontFamily="@font/brandon_medium"
            android:textStyle="italic"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nume: Paul"
            android:fontFamily="@font/brandon_medium"
            android:textStyle="italic"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/txt_order_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stare: PlasatÄƒ"
            android:fontFamily="@font/brandon_medium"
            android:textStyle="italic"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/txt_num_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Numar produse: 10"
            android:fontFamily="@font/brandon_medium"
            android:textStyle="italic"
            android:textSize="16sp"/>

     </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>